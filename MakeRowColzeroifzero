package Arrays;

import java.util.ArrayList;
import java.util.List;

/*Zero Matrix: Write an algorithm such that if an element in an MxN matrix is 0, its entire row and 
column are set to 0. */
public class Makezeros {
	
	public int[][] makeZeros(int[][] input,int rows,int columns,int[][] output){
		if(rows==0 || columns==0) {
			return output;
		}
		
		
		int size=rows+columns;
		Integer[] rowColZeroIndexes=new Integer[size];
		
		
		
	
		int colSizeStarting=size-rows;
	    for(int i=0;i<rows;i++) {
	    	
	    	for(int j=0;j<columns;j++) {
	    		
	    		if(input[i][j]==0) {
	    		    rowColZeroIndexes[i]=0;	
	    		    rowColZeroIndexes[colSizeStarting]=0;
	    		}
	    		
	    		else {
	    			
	    		}
	    		}
	    		
	    	}
	    	
	    }
		
		return output;
	}
	
	row1,column1
	
	
	

}
